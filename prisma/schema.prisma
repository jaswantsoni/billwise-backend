generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  email         String         @unique
  name          String
  password      String?
  googleId      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  organisations Organisation[]
}

model Organisation {
  id                String     @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  tradeName         String?
  gstin             String?    @unique
  pan               String?
  address           String
  city              String?
  state             String?
  stateCode         String?
  pincode           String?
  phone             String
  email             String
  logo              String?
  
  // Bank Details
  bankName          String?
  branch            String?
  accountHolderName String?
  accountNumber     String?
  ifsc              String?
  upi               String?
  
  // Legal
  authorizedSignatory String?
  signatureUrl      String?
  companySealUrl    String?
  
  userId            String     @db.ObjectId
  user              User       @relation(fields: [userId], references: [id])
  customers         Customer[]
  suppliers         Supplier[]
  products          Product[]
  purchases         Purchase[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model Customer {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  gstin          String?
  email          String?
  phone          String?
  organisationId String    @db.ObjectId
  organisation   Organisation @relation(fields: [organisationId], references: [id])
  addresses      Address[]
  invoices       Invoice[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Address {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  type       String
  line1      String
  line2      String?
  city       String
  state      String
  pincode    String
  country    String   @default("India")
  isDefault  Boolean  @default(false)
  isShipping Boolean  @default(false)
  customerId String   @db.ObjectId
  customer   Customer @relation(fields: [customerId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Product {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  sku            String
  hsnCode        String?
  sacCode        String?
  unit           String
  price          Float
  purchasePrice  Float         @default(0)
  taxRate        Float
  stock          Float         @default(0)
  totalPurchased Float         @default(0)
  totalSold      Float         @default(0)
  minStock       Float         @default(0)
  maxStock       Float         @default(0)
  reorderLevel   Float         @default(0)
  discount       Float         @default(0)
  currency       String        @default("INR")
  organisationId String        @db.ObjectId
  organisation   Organisation  @relation(fields: [organisationId], references: [id])
  invoiceItems   InvoiceItem[]
  purchaseItems  PurchaseItem[]
  stockMovements StockMovement[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@unique([organisationId, sku])
}

model Invoice {
  id                 String        @id @default(auto()) @map("_id") @db.ObjectId
  invoiceNumber      String        @unique
  invoiceType        String        @default("TAX_INVOICE")
  invoiceCopyType    String        @default("ORIGINAL")
  customerId         String        @db.ObjectId
  customer           Customer      @relation(fields: [customerId], references: [id])
  billingAddressId   String?       @db.ObjectId
  shippingAddressId  String?       @db.ObjectId
  invoiceDate        DateTime
  dueDate            DateTime
  placeOfSupply      String?
  reverseCharge      Boolean       @default(false)
  
  // Amounts
  subtotal           Float
  cgst               Float         @default(0)
  sgst               Float         @default(0)
  igst               Float         @default(0)
  cess               Float         @default(0)
  roundOff           Float         @default(0)
  deliveryCharges    Float         @default(0)
  packingCharges     Float         @default(0)
  otherCharges       Float         @default(0)
  totalTax           Float
  total              Float
  amountInWords      String?
  
  // Delivery & Transport
  modeOfDelivery     String?       @default("IN_HAND")
  vehicleNumber      String?
  transportName      String?
  lrNumber           String?
  ewayBillNumber     String?
  placeOfDelivery    String?
  deliveryDate       DateTime?
  freightTerms       String?       @default("PAID")
  
  // Payment
  paymentStatus      String        @default("UNPAID")
  paymentMethod      String?
  paymentTerms       String?       @default("NET_30")
  paidAmount         Float         @default(0)
  balanceAmount      Float?
  referenceNumber    String?
  
  // Notes & Terms
  notes              String?
  termsConditions    String?
  paymentInstructions String?
  deliveryInstructions String?
  returnPolicy       String?
  lateFeePolicy      String?
  warrantyInfo       String?
  supportContact     String?
  declaration        String?
  
  // Legal & Compliance
  irn                String?
  ackNumber          String?
  ackDate            DateTime?
  qrCodeData         String?
  
  // System
  status             String        @default("DRAFT")
  organisationId     String        @db.ObjectId
  items              InvoiceItem[]
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model InvoiceItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  invoiceId   String   @db.ObjectId
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
  productId   String   @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id])
  description String
  hsnSac      String?
  quantity    Float
  unit        String   @default("PCS")
  rate        Float
  discount    Float    @default(0)
  taxRate     Float
  cgst        Float    @default(0)
  sgst        Float    @default(0)
  igst        Float    @default(0)
  amount      Float
  taxAmount   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Supplier {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  gstin          String?
  email          String?
  phone          String?
  address        String?
  city           String?
  state          String?
  pincode        String?
  organisationId String     @db.ObjectId
  organisation   Organisation @relation(fields: [organisationId], references: [id])
  purchases      Purchase[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Purchase {
  id                 String         @id @default(auto()) @map("_id") @db.ObjectId
  purchaseNumber     String         @unique
  supplierId         String         @db.ObjectId
  supplier           Supplier       @relation(fields: [supplierId], references: [id])
  purchaseDate       DateTime
  dueDate            DateTime?
  billNumber         String?
  placeOfSupply      String?
  reverseCharge      Boolean        @default(false)
  
  // Amounts
  subtotal           Float
  cgst               Float          @default(0)
  sgst               Float          @default(0)
  igst               Float          @default(0)
  cess               Float          @default(0)
  roundOff           Float          @default(0)
  otherCharges       Float          @default(0)
  totalTax           Float
  total              Float
  
  // Payment
  paymentStatus      String         @default("UNPAID")
  paymentMethod      String?
  paidAmount         Float          @default(0)
  balanceAmount      Float?
  
  notes              String?
  status             String         @default("DRAFT")
  organisationId     String         @db.ObjectId
  organisation       Organisation   @relation(fields: [organisationId], references: [id])
  items              PurchaseItem[]
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
}

model PurchaseItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  purchaseId  String   @db.ObjectId
  purchase    Purchase @relation(fields: [purchaseId], references: [id])
  productId   String   @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id])
  description String
  hsnSac      String?
  quantity    Float
  unit        String
  rate        Float
  discount    Float    @default(0)
  taxRate     Float
  cgst        Float    @default(0)
  sgst        Float    @default(0)
  igst        Float    @default(0)
  amount      Float
  taxAmount   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StockMovement {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  productId      String   @db.ObjectId
  product        Product  @relation(fields: [productId], references: [id])
  type           String   // IN | OUT | ADJUSTMENT
  quantity       Float
  reference      String?  // Invoice/Purchase number
  referenceId    String?  // Invoice/Purchase ID
  notes          String?
  balanceAfter   Float
  createdAt      DateTime @default(now())
}
